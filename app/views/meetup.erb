<h1><%= @title %></h1>

<p><%= @meetup.name %></p>
<p><%= @meetup.description %></p>

<% if @events[0] != nil %>
  <% @events.each do |event| %>
    <ul>
      <li>Next meeting:</li>
      <li><%= event.description %></li>
      <li><%= event.date %></li>
      <li><%= event.location %></li>
    </ul>
  <% end %>
<% end %>

<form action = <%= "/meetup/join/#{@meetup.id}" %> method = 'post'>
  <input type = "submit" value = "Join">
</form>

<form action = <%= "/meetup/leave/#{@meetup.id}" %> method = 'post'>
  <input type = "submit" value = "Leave">
</form>


<p>Create new meetup event: </p>

<form action = <%= "/meetup/event/#{@meetup.id}" %> method="post">
  <label for = "date">Meetup date: </label>
  <input type = "text" name = "date" id = "date" />
  <br><br>
  <label for = "location">Meetup location: </label>
  <input type = "text" name = "location" id = "location" />
  <br><br>
  <label for = "description">Meetup description: </label>
  <input type = "text" name = "description" id = "description" />
  <br>
  <input type = "submit" value = "Submit">
</form>


<% if @comments[0] != nil %>
  <% @comments.each do |comment| %>
    <ul>
    <li><strong><%= comment.title %></strong></li>
      <li><%= comment.comment %></li>
    </ul>
  <% end %>
<% end %>

<p>Comment on Meetup Group: </p>

<form action = <%= "/meetup/comment/#{@meetup.id}" %> method="post">
<label for = "title">Title: </label>
  <input type = "text" name = "title" id = "title" />
  <label for = "comment">Comment: </label>
  <input type = "text" name = "comment" id = "comment" />
  <input type = "submit" value = "Submit">
</form>

<p>Members: </p>

<% if @users[0] != nil %>
  <% @users.each do |user| %>
    <ul id="users">
      <li><img src = <%= user.avatar_url %> /></li>
      <li><%= user.username %></li>
    </ul>
  <% end %>
<% end %>

